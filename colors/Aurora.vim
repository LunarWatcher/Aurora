    au Filetype * syn match TransPink /\c\v[rn]+/ contained
    au Filetype * syn match TransWhite /\c\v[a]+/ contained
augroup END
hi TransBlue  guibg=#55CDFC
hi TransPink  guibg=#F7A8B8
hi TransWhite  guibg=#FFFFFF
